<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".BillingDetails">

    <customfonts.Medium_Textview
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:padding="16dp"
        android:textColor="@color/dark_text"
        android:text="Order Invoice"
        android:textSize="17dp"
        android:src="@drawable/btn"
        android:layout_alignParentTop="true"
        android:textStyle="bold"
        android:id="@+id/medium_Textview"/>

    <ScrollView android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn"
        android:layout_below="@+id/medium_Textview">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            >



            <LinearLayout android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#dfdfdf"></LinearLayout>


            <customfonts.Regular_Textview
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:padding="12dp"
                android:textColor="@color/medium_text"
                android:text="Full Order Details"
                android:textSize="14dp"
                android:gravity="center"
                android:src="@drawable/btn" android:id="@+id/regular_Textview"/>


            <LinearLayout android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/corner_layout"
                android:elevation="4dp"
                android:padding="12dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginBottom="8dp"
                >

                <LinearLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <LinearLayout android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="6dp">

                            <customfonts.Regular_Textview
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_centerHorizontal="true"
                                android:textColor="@color/medium_text"
                                android:text="Order Date Time"
                                android:textSize="12dp"
                                android:gravity="center"
                                android:src="@drawable/btn"/>


                            <customfonts.Regular_Textview
                                android:id="@+id/orderDateAndTime"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_centerHorizontal="true"
                                android:textColor="#141414"
                                android:text="Today 11:30 am"
                                android:textSize="14dp"
                                android:gravity="center"
                                android:layout_marginLeft="16dp"
                                />


                        </LinearLayout>


                        <LinearLayout android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="6dp"
                            >

                            <customfonts.Regular_Textview
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_centerHorizontal="true"
                                android:textColor="@color/medium_text"
                                android:text="Name"
                                android:textSize="12dp"
                                android:gravity="center"
                                android:src="@drawable/btn"/>


                            <customfonts.Regular_Textview
                                android:id="@+id/customerName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_centerHorizontal="true"
                                android:textColor="#141414"
                                android:text="Tommorro 9:30 am"
                                android:textSize="14dp"
                                android:layout_marginLeft="12dp"
                                />


                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <customfonts.Regular_Textview
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:textColor="@color/text_color"
                            android:text="Payable"
                            android:textSize="12dp"
                            android:layout_gravity="right"

                            android:gravity="center"
                            android:layout_margin="3dp"                />

                        <customfonts.Medium_Textview
                            android:id="@+id/totalPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:textColor="@color/dark_blue"
                            android:text="$ 3.50"
                            android:textSize="14dp"
                            android:gravity="right"
                            android:layout_gravity="right"
                            android:layout_margin="3dp"                />
                        />

                        <customfonts.Regular_Textview
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:textColor="@color/green"
                            android:text="Free Delievery"
                            android:textSize="12dp"
                            android:layout_gravity="right"
                            android:gravity="right"
                            android:layout_margin="3dp"                />
                        />

                    </LinearLayout>



                </LinearLayout>


                <LinearLayout android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#cfcfcf"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"></LinearLayout>


                <LinearLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="4dp"
                    >

                    <customfonts.Regular_Textview
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:textColor="@color/medium_text"
                        android:text="Delievery Address"
                        android:textSize="12dp"
                        android:src="@drawable/btn"/>


                    <customfonts.Regular_Textview
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:textColor="@color/medium_text"
                        android:text="Order Status : "
                        android:textSize="12dp"
                        android:gravity="center"
                        android:src="@drawable/btn"/>


                    <customfonts.Regular_Textview
                        android:id="@+id/orderStatusTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:textColor="@color/medium_text"
                        android:text="Not Avaiable"
                        android:textSize="12dp"
                        android:gravity="center"
                        android:src="@drawable/btn"/>


                </LinearLayout>

                <customfonts.Regular_Textview
                    android:id="@+id/billingAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/black"
                    android:text="44 Shirley Eve."
                    android:textSize="13dp"
                    android:gravity="center"
                    android:layout_marginTop="6dp"
                    android:layout_marginLeft="4dp"
                    />



            </LinearLayout>
            <LinearLayout

                android:background="#cfcfcf"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <customfonts.Regular_Textview
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/medium_text"
                    android:text="Cook Name"
                    android:textSize="12dp"
                    android:gravity="center"
                    android:src="@drawable/btn"/>

                <customfonts.Regular_Textview
                    android:id="@+id/foodmakerName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/black"
                    android:text="44 Shirley Eve."
                    android:textSize="13dp"
                    android:gravity="center"
                    android:layout_marginTop="6dp"
                    android:layout_marginLeft="4dp"
                    />

            </LinearLayout>

            <ListView
                android:id="@+id/listView1"
                android:layout_width="fill_parent"
                android:layout_height="153dp"
                android:divider="?android:attr/listDivider"
                android:dividerHeight="1dp" />


            <customfonts.Regular_Textview
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:padding="18dp"
                android:src="@drawable/btn"
                android:text="invoice detail shall be available here within 24 hours of pick"
                android:textColor="@color/medium_text"
                android:textSize="13dp" />



        </LinearLayout>

    </ScrollView>


    <customfonts.Regular_Textview
        android:id="@+id/finalPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="@color/dark_blue"
        android:gravity="center"
        android:padding="16dp"
        android:src="@drawable/btn"
        android:text="Final Price"
        android:textColor="@color/white"
        android:textSize="15dp" />

    <FrameLayout
        android:id="@+id/frameLoading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        >

        <ImageView android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/circle"/>

        <ImageView
            android:id="@+id/loadingImage"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:src="@drawable/loading"
            android:layout_gravity="center"/>


    </FrameLayout>





</RelativeLayout>
